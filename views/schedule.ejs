<% if (courses==[]){%>

    There are no courses currently in your schedule.
  
  <% } else  if (courses==null) { %>
  
    There are no courses currently in your schedule.
  
  <% } else if (courses.length>0) { %>
  
      <h2 class="mt-5">Courses in your schedule: </h2>
  
      <div class="d-flex flex-wrap  overflow-scroll">
          <% for (course of courses) {%>
              <div class="p-3 m-3 border border-danger bg-light" style="max-width: 30vw;">
                  
                  <br> 
                  <a style="color: red; text-decoration: none;" href="/schedule/remove/<%= course._id %>"> 
                   X
                  </a>
                  <div style="font-weight: 600; ">
                    <%= course.name %>
                  </div>
                  <hr>
                  <div class="d-flex flex-wrap  overflow-wrap">
                    <div class="p-1 m-1">
                        <%= course['subject'] %>
                        <%= course.coursenum %>
                    </div>
                    <div class="p-1 m-1">
                        Term:  <%= course.term %>
                    </div>
                    <div class="p-1 m-1">
                        You are 1 student of <%= course.enrolled %> in the class. 
                    </div>
                    <div class="p-1 m-1"> 
                        <%= course.instructor[1] %> will be your professor! 
                    </div>
                     
                  </div>
                  
                  
              </div>
          <% }%>
          </div>
  
      <hr>
  <% } %>


